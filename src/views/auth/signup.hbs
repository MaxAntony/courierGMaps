<div class="d-flex justify-content-center">
  .<div class="signup">
    {{#each errors}}
    <div class="alert alert-danger" role="alert">
      {{this}}
    </div>
    {{/each}}
    <div class="card text-center">

      <div class="card-header">
        Registrarse
      </div>
      <div class="card-body">
        <form action="/signup" method="POST">
          <div class="form-group">
            <label for="exampleInputName">Nombre</label>
            <input name="name" required type="text" class="form-control" id="exampleInputName"
              placeholder="ingrese su nombre">
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Correo electronico</label>
            <input name="email" required type="email" class="form-control" id="exampleInputEmail1"
              placeholder="ingrese su correo">
          </div>
          <div class="form-group">
            <label for="exampleInputName">Telefono</label>
            <input name="phone" required pattern="[0-9]{9}" maxlength="9" minlength="9" type="tel" class="form-control"
              id="exampleInputName" placeholder="ingrese su telefono">
          </div>
          <div class="form-group">
            <label for="exampleInputName">Clave</label>
            <input name="password" required maxlength="3" type="text" class="form-control" id="exampleInputName"
              placeholder="ingrese su clave">
          </div>
          <div class="form-group">
            <label for="exampleInputName">Repita contrase√±a</label>
            <input name="repeatPassword" required minlength="3" type="text" class="form-control" id="exampleInputName"
              placeholder="ingrese su clave">
          </div>
          <div class="form-group">
            <label for="exampleInputName">Direccion</label>
            <input name="direction" required type="text" class="form-control" id="exampleInputName"
              placeholder="ingrese su Direccion">
          </div>
          <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
      </div>
    </div>
  </div>
</div>